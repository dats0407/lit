.container {
  width: 100%;
  height: 100%;
  background: #cc463d;
}

.portrait {
  height: 80rpx;
  width: 80rpx;
  float: left;
  margin-left:60rpx;
  margin-top:40px;
}

.coupon {
  height: 720rpx;
  width: 700rpx;
  background: white;
  margin: 0 25rpx 0 25rpx;
  margin-top:200rpx;
  border-radius:15px;
}

.titleText {
  color: white;
  font-size: 30rpx;
  position:absolute;
  margin-top:100rpx;
  margin-left:30rpx;
}

.logo {
  height: 80rpx;
  width: 80rpx;
  margin: 0 auto;
  display: block;
  padding: 150rpx;
}

.couponTitle {
  display: block;
  text-align: center;
  margin-top:-80rpx;
  font-size:30rpx;
  color:#6b6a6a;
  font-weight:400;
}

.couponSlogan {
  display: block;
  text-align: center;
  margin-top:50rpx;
  font-size:50rpx;

}

.receiveBtn {
  width:248rpx;
  margin-bottom:50px;
  margin-top:80rpx;
  background-color:#ffffff;
  border:1px solid #cc463d;
  color:#cc463d;
  border-radius:50rpx;
}

.shareBtn{
  width:80%;
  margin-bottom:200rpx;
  margin-top:70rpx;
  background-color:#cc463d;
  border:3rpx solid #ffffff;
  color:white;
}

.couTitle{
  display:block;
  text-align:center;
  margin-top:-10rpx;
  font-size:22px;
  color:#ed9a3c;
  font-weight:400;
  position:absolute;
  margin:50rpx 60rpx 0 245rpx;
}