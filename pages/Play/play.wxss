.moreContent{
  position:fixed;
  z-index:100;
  width:480rpx;
  top: 40%;
  height:auto;
  margin: 0;
  left:110rpx;
  background:#000;
  color:black;
  border-radius:10px;
  padding:10px;
}

.moreContentMove{
  transform:translateY(0px);
  transition: all 4s ease;

}

.moreContentHide{
